<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Itproger.MainPage">

    <StackLayout BackgroundColor="#f3f2f8" Padding="10,20">
        <Frame Background="#e4e3e9" CornerRadius="10" Padding="5,0,0,0">

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Itproger.ListDetailPage">
    <StackLayout>
        <Label Text="{Binding Name}" TextColor="#0179fc" FontSize="35" FontAttributes="Bold" ></Label>
        <Label Text="{Binding Id}" TextColor="#0179fc" FontSize="35" FontAttributes="Bold" ></Label>
        <Entry x:Name="reminderNameEntry" Placeholder="List Name"/>
        <Button Text="add reminder" />
        <ListView x:Name="listDetail">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <RadioButton VerticalOptions="Center" TextColor="#007bfc" />
                            <Label Text="{Binding Title}" VerticalOptions="Center" FontSize="20" TextColor="Black"/>
                            <Label Text="{Binding Id}" VerticalOptions="Center" FontSize="20" TextColor="Black"/>
                        </StackLayout>
                        <ViewCell.ContextActions>
                            <MenuItem Text="Delete" IsDestructive="True" CommandParameter="{Binding .}"/>
                        </ViewCell.ContextActions>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </StackLayout>
</ContentPage>